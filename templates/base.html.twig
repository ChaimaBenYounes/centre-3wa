<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
        {% endblock %}
    </head>
    <body>
    	<div class="container">
        {% block nav %}
 
	       <div class="row">
				<div class="col-xs-12">
					<ul class="nav nav-pills">
                        {% for training in trainings %}
						<li ><a href="{{ path('training-slug', {'id': training.id }) }}">{{ training.name|e }}</a></li>
					    {% endfor %}
			
					</ul>
				</div>
			</div>

        {% endblock %}
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
